{
  "name": "stellaris-companion",
  "version": "1.0.0",
  "description": "Desktop companion app for Stellaris - AI-powered strategic advisor",
  "main": "main.js",
  "author": "Stellaris Companion",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cd renderer && vite",
    "dev:electron": "electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "cd renderer && vite build",
    "build:electron": "electron-builder",
    "start": "electron ."
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "electron-rebuild": "^3.2.9",
    "electron-updater": "^6.1.0"
  }
}
