{
  "name": "stellaris-companion",
  "version": "0.5.6",
  "description": "Desktop companion app for Stellaris - AI-powered strategic advisor",
  "main": "main.js",
  "author": "Stellaris Companion",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "cd renderer && npm run dev",
    "dev:electron": "NODE_ENV=development electron .",
    "build": "npm run build:renderer && npm run build:electron",
    "build:renderer": "cd renderer && npm run build",
    "build:electron": "electron-builder",
    "publish": "npm run build:renderer && electron-builder --publish always",
    "start": "electron ."
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.0",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0"
  }
}
